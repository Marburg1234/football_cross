<div class="container">
  <div class="row my-3">
    <h2 class="text-center">ログイン</h2>
  </div>

  <!--<= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>-->
  <%= form_with model:@user, url: user_session_path do |f| %>
    <div class="row">
      <div class="col-lg-6 col-md-12 col-sm-12 mx-auto">
        <div class="field">
          <%= f.text_field :nickname, autofocus: true, autocomplete: "nickname", placeholder: "ニックネーム", class: 'form-control mb-4' %>
        </div>
        <div class="field">
          <%= f.password_field :password, autocomplete: "current-password", placeholder: "パスワード", class: 'form-control mb-4' %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-4 col-md-6 col-sm-12 mx-auto">
        <div class="actions">
          <%= f.submit "ログイン", class: 'btn btn-success form-control mb-4' %>
        </div>
      </div>
    </div>
  <% end %>
  <div class="row">
    <div class="col-4 mx-auto text-center">
      <%= render "public/shared/links" %>
    </div>
  </div>
</div>